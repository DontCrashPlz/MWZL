<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/ordercard_lly_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="13dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/ordercard_tv_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0001"
                android:textSize="28sp"
                android:textColor="@color/order_status_green"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/ordercard_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待备货"
                android:textSize="22sp"
                android:textColor="@color/order_status_green"
                android:layout_toRightOf="@+id/ordercard_tv_serial" />
            <TextView
                android:id="@+id/ordercard_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ordercard_create_time"
                android:textSize="15sp"
                android:textColor="@color/order_status_green"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ordercard_tv_serial" />
            <ImageView
                android:id="@+id/ordercard_iv_expand"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:src="@mipmap/expand_green"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/ordercard_tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle_green"
                android:text="提"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ordercard_iv_expand"/>
        </RelativeLayout>

        <View
            android:id="@+id/ordercard_head_devide"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/order_status_green"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:id="@+id/ordercard_lly_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买家姓名："
                    android:textSize="15sp"
                    android:textColor="@color/text_color_black"/>
                <TextView
                    android:id="@+id/ordercard_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王先生"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textSize="15sp"
                    android:textColor="@color/text_color_black"/>
                <TextView
                    android:id="@+id/ordercard_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130-0000-0000"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    android:textSize="15sp"
                    android:textColor="@color/text_color_black"/>
                <TextView
                    android:id="@+id/ordercard_tv_ordernum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000000000000000"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_black"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/page_background_gary"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ordercard_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/page_background_gary"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商品数量"
                    android:textColor="@color/order_item_gary"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/ordercard_tv_goodsnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x1"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_red_light"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单金额"
                    android:textColor="@color/order_item_gary"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/ordercard_tv_orderprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥100"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_red_light"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ordercard_toolnum_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="餐具数量"
                    android:textColor="@color/order_item_gary"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/ordercard_tv_toolnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_red_light"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(套)"
                    android:textColor="@color/order_item_gary"
                    android:textSize="11sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ordercard_age_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="顾客年龄"
                    android:textColor="@color/order_item_gary"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/ordercard_tv_customage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="18"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_red_light"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(岁)"
                    android:textColor="@color/order_item_gary"
                    android:textSize="11sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/page_background_gary"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注:"
                    android:textColor="@color/order_item_gary"
                    android:textSize="15sp"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/ordercard_tv_remark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="无备注"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ordercard_lly_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/ordercard_tv_print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_gary_corner_hollow_selector"
                    android:text="打印小票"
                    android:textSize="15sp"
                    android:textColor="@color/order_item_gary"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:clickable="true"
                    android:layout_marginRight="18dp"/>
                <TextView
                    android:id="@+id/ordercard_tv_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_gary_corner_hollow_selector"
                    android:text="备货完成"
                    android:textSize="15sp"
                    android:textColor="@color/order_item_gary"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:clickable="true"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>