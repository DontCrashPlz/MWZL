<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/home_fly_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/home_rbtn_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="订单管理"
            android:textColor="@color/navigation_text_color"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/navigation_background"
            android:drawableTop="@drawable/navigation_icon_order"
            android:paddingTop="10dp"/>
        <RadioButton
            android:id="@+id/home_rbtn_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="店铺管理"
            android:textColor="@color/navigation_text_color"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/navigation_background"
            android:drawableTop="@drawable/navigation_icon_shop"
            android:paddingTop="10dp"/>
        <RadioButton
            android:id="@+id/home_rbtn_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="设置"
            android:textColor="@color/navigation_text_color"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/navigation_background"
            android:drawableTop="@drawable/navigation_icon_setting"
            android:paddingTop="10dp"/>
    </RadioGroup>

</LinearLayout>